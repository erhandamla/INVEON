@model List<INVEON.Core.Entities.Product>
@{
	ViewBag.Title = "List";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
	<div class="col-lg-12">
		<div class="panel panel-default">
			<!-- Default panel contents -->
			<div class="panel-heading">Ürün Listesi</div>
			<div class="panel-body">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Barkod</th>
							<th>Adı</th>
							<th>Açıklama</th>
							<th>Fiyat</th>
							<th>Güncelle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var product in Model)
						{
							<tr>
								<td><a href="@Url.Action("Index","Product",new { id = product.Id })">@product.Barcode</a></td>
								<td>@product.Name</td>
								<td>@product.Description</td>
								<td>@product.Price</td>
								<td>
									@Html.ActionLink("Güncelle", "/Update", new { id = product.Id }, new { @class = "btn btn-warning" })
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

			<!-- Table -->
		</div>

	</div>
</div>

