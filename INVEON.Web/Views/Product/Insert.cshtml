@model INVEON.Dtos.ViewModels.ProductInsertViewModel

@{
	ViewBag.Title = "Insert";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="page-header">
	<h1>Yeni Ürün Oluşturma<br /> <small>Lütfen ürün bilgilerini giriniz</small></h1>
</div>
<div class="panel panel-default">
	<div class="panel-body">

		@using (Html.BeginForm("Insert", "Product", FormMethod.Post, new { enctype = "multipart/form-data", @class = "nav-login-form" }))
		{
			@Html.HiddenFor(m => m.Id);
			<div class="form-group">
				@Html.LabelFor(m => m.Image)
				<input type="file" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Barcode) <span class="required">*</span>
				@Html.TextBoxFor(m => m.Barcode, new { @required = "required", @type = "number", @class = "form-control" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Name) <span class="required">*</span>
				@Html.TextBoxFor(m => m.Name, new { @required = "required", @class = "form-control" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Description)
				@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Price) <span class="required">*</span>
				@Html.TextBoxFor(m => m.Price, new { @required = "required", @class = "form-control" })
			</div>
			<div class="form-group">
				@Html.LabelFor(m => m.Instock) <span class="required">*</span>
				@Html.TextBoxFor(m => m.Instock, new { @type = "number", @required = "required", @class = "form-control" })
			</div>

			<button type="submit" class="btn btn-success">Kaydet</button>
			<a class="btn btn-default" href="@Url.Action("List","Product")">İptal</a>

		}

	</div>
</div>
